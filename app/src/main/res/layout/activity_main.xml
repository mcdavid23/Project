<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gif.gif.MainActivity">

    <Button
        android:id="@+id/CREATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="80dp"
        android:onClick="onButtonClick"
        android:text="CREATE"
        app:layout_constraintBottom_toTopOf="@+id/recordScreenButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/recordScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="194dp"
        android:layout_marginEnd="148dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="148dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toTopOf="@+id/recordCameraButton"
        android:layout_marginTop="66dp"
        app:layout_constraintTop_toBottomOf="@+id/CREATE" />

    <Button
        android:id="@+id/recordCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="305dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="146dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="158dp"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toBottomOf="@+id/recordScreenButton" />
</android.support.constraint.ConstraintLayout>
