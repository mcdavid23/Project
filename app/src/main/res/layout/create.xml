<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gif.gif.MainActivity">


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/recordScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="66dp"
        android:onClick="recordScreenClick"
        android:text="Record Screen"
        app:layout_constraintBottom_toTopOf="@+id/recordCameraButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CREATE"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="194dp" />

    <android.support.v7.widget.AppCompatButton

        android:id="@+id/recordCameraButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="158dp"
        android:layout_marginEnd="146dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="63dp"
        android:text="Open Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordScreenButton"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="305dp" />
</android.support.constraint.ConstraintLayout>
